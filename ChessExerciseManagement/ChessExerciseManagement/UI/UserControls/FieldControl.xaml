<UserControl x:Class="ChessExerciseManagement.UI.UserControls.FieldControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChessExerciseManagement.UI.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="200" BorderBrush="Black" BorderThickness="1">
    <Grid Name="grid" Background="#00000000" MouseLeftButtonDown="Grid_MouseLeftButtonDown">
        <Image Name="imageViewer" Margin="10"/>
        <Label x:Name="ColumLabel" FontSize="18pt" Height="auto" VerticalAlignment="Top" HorizontalAlignment="Left" Width="40" Margin="0,-5,0,0"/>
        <Label x:Name="RowLabel" Foreground="#FFFFFFFF" FontSize="18pt" HorizontalAlignment="Right" VerticalAlignment="Bottom" Height="auto" Width="40" Margin="0,0,-15,-2"/>
    </Grid>

</UserControl>
